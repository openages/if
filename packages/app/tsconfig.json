{
      "compilerOptions": {
            "target": "ES2022",
            "skipLibCheck": true,
            "lib": [
                  "ESNEXT",
                  "DOM"
            ],
            "module": "ESNext",
            "moduleResolution": "Bundler",
            "strict": false,
            "jsxImportSource": "react",
            "jsx": "react-jsx",
            "baseUrl": ".",
            "esModuleInterop": true,
            "resolveJsonModule": true,
            "paths": {
                  "@/*": [
                        "./*"
                  ]
            },
            "emitDecoratorMetadata": true,
            "experimentalDecorators": true
      },
      "include": [
            "**/*.ts",
            "**/*.tsx"
      ],
      "exclude": [
            "./node_modules"
      ],
      "ts-node": {
            "compilerOptions": {
                  "module": "commonjs"
            }
      }
}