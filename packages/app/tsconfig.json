{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"skipLibCheck": true,
		"lib": ["ESNEXT", "DOM"],
		"moduleResolution": "Node",
		"strict": false,
		"jsxImportSource": "react",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": { "@/*": ["./*"] },
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["./node_modules"],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
