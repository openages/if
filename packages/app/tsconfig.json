{
	"compilerOptions": {
		"target": "ES2022",
		"skipLibCheck": true,
		"lib": ["ESNEXT", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"jsxImportSource": "react",
		"jsx": "react-jsx",
		"baseUrl": "../",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./app/*"],
			"@server/*": ["./if_server/src/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["./node_modules"],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
