{
      "$schema": "http://json.schemastore.org/electron-builder",
      "productName": "IF",
      "appId": "matrixages.if",
      "asar": true,
      "directories": {
            "output": "release/${version}_setup"
      },
      "files": [
            "!node_modules/**/*",
            "assets/**/*",
            "load/**/*",
            "dist/**/*",
            "../app/dist/**/*"
      ],
      "mac": {
            "target": [
                  "dmg",
                  "zip"
            ],
            "icon": "assets/icons/logo.icns"
      },
      "win": {
            "target": [
                  {
                        "target": "nsis",
                        "arch": [
                              "x64",
                              "ia32"
                        ]
                  }
            ],
            "artifactName": "${productName}_setup_${version}.${ext}",
            "icon": "assets/icons/ico/logo.ico"
      },
      "publish": [
            {
                  "provider": "generic",
                  "url": ""
            }
      ],
      "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true,
            "installerIcon": "assets/icons/ico/logo.ico",
            "uninstallerIcon": "assets/icons/ico/logo.ico",
            "installerHeader": "assets/icons/ico/logo.ico",
            "installerHeaderIcon": "assets/icons/ico/logo.ico",
            "installerSidebar": "assets/img_sizebar.bmp",
            "uninstallerSidebar": "assets/img_sizebar.bmp"
      },
      "fileAssociations": [
            {
                  "name": "IF",
                  "ext": "elefile",
                  "icon": "assets/icons/ico/logo.ico",
                  "description": "IF: GTD for professionals."
            }
      ]
}