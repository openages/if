{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"linter": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 6,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingComma": "none",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
